# Netgear Nighthawk AC1900 R6900v2 Configuration
# Target: bcm53xx/generic

CONFIG_TARGET_bcm53xx=y
CONFIG_TARGET_bcm53xx_generic=y
CONFIG_TARGET_bcm53xx_generic_DEVICE_netgear_r6900-v2=y

# Device-specific settings
CONFIG_TARGET_BOARD="bcm53xx"
CONFIG_TARGET_SUBTARGET="generic"
CONFIG_TARGET_PROFILE="DEVICE_netgear_r6900-v2"
CONFIG_TARGET_ARCH_PACKAGES="arm_cortex-a9"

# Kernel modules for hardware support
CONFIG_PACKAGE_kmod-b43=y
CONFIG_PACKAGE_kmod-brcmfmac=y
CONFIG_PACKAGE_kmod-brcmutil=y
CONFIG_PACKAGE_kmod-cfg80211=y
CONFIG_PACKAGE_kmod-mac80211=y

# Broadcom wireless firmware
CONFIG_PACKAGE_brcmfmac-firmware-43602a1-pcie=y
CONFIG_PACKAGE_b43-tools=y

# Network drivers
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-storage=y

# LED and button support
CONFIG_PACKAGE_kmod-leds-gpio=y
CONFIG_PACKAGE_kmod-gpio-button-hotplug=y

# Storage support
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs=y
CONFIG_PACKAGE_kmod-fs-vfat=y

# Hardware-specific network drivers
CONFIG_PACKAGE_kmod-bgmac=y
CONFIG_PACKAGE_kmod-tg3=y

# NAND flash support
CONFIG_PACKAGE_kmod-mtd-nand=y